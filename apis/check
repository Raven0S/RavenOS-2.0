function check(func)
  ok, err = pcall(func)
  
  if not ok then
    term.setTextColor(colors.white)
    term.setBackgroundColor(colors.blue)
    term.clear()
    term.setCursorPos(1,1)
    text.center("Oh no! We've had an error!", 1)
    text.center(err, 0)
    text.center("Please report this error to the developer!")
  end
end
