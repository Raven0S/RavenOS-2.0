f = fs.open("rSettings/username", "r")
un = f.readLine()
f.close()

if not fs.exists("dontUseLogin") then
  term.setBackgroundColor(system.color)
  term.clear()
  term.setCursorPos(1,1)
  text.center("Welcome, "..un, 0)
  sleep(2)
  shell.run("rOS/desktop")
else
  term.setBackgroundColor(system.color)
  term.clear()
  term.setCursorPos(1,1)
  text.center("Welcome to RavenOS!")
  sleep(2)
  shell.run("rOS/desktop")
end
