tArgs = {...}
 
if tArgs[1] == nil then
  print("Improper syntax!")
  return
end
 
content = fs.list(tArgs[1])
 
for i,v in pairs(content) do
  if v ~= "rOS" then
  if v ~= "rPaints" then
  if v ~= "rApis" then
  if v ~= "rSettings" then
 
    if fs.isDir(v) then
      term.setTextColor(colors.green)
      write(v.. " ")
      term.setTextColor(colors.white)
    end
    term.setTextColor(colors.yellow)
    write(v.." ")
    term.setTextColor(colors.white)
   
  end
  end
  end
  end
end
 
print("")
